<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i>  Anmelden</h1>
      <%= include ("./partials/messages"); %>
      <form action="/users/login" method="POST">
        <div class="form-group">
          <label for="email">E-mail</label>
          <input
            type="email"
            id="email"
            name="email"
            class="form-control"
            placeholder="E-mail..."
          />
        </div>
        <div class="form-group">
          <label for="password">Passwort</label>
          <input
            type="password"
            id="password"
            name="password"
            class="form-control"
            placeholder="Passwort..."
          />
        </div>
        <button type="submit" class="btn btn-primary btn-block">Anmelden</button>
      </form>
      <p class="lead mt-4">
        Noch keinen Account? <a href="/users/register">Registrieren</a>
      </p>
    </div>
  </div>
</div>